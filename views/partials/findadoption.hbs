<div class="container">
{{!-- {{#each pets}} --}}
<div class="card">
    <div class="columns">
        <div class="column">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
            </div>
        </div>
        <div class="column">
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4">{{pets.name}}</p>
                    </div>
                </div>
                    
                <div class="content">
                    <ul>
                        <li><strong>Breed: </strong>{{pets.breed}}</li>
                        <li><strong>Age: </strong>{{pets.age}} years</li>
                        <li><strong>Size: </strong>{{pets.weight}} lbs</li>
                        <li><strong>Disability: </strong>{{pets.disability}}</li>
                        <li><strong>Location: </strong>{{pets.breed}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- {{/each}} --}}
</div>